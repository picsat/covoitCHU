{% extends 'templates/app.twig' %}
{% block content %}
    <div class="content {{ _self.templateName|replace({'.twig':'', '/':'_'}) }}">
        {% if auth.check %}
        <div class="col-lg-8 col-sm-12 offset-lg-2">
            <div class="card">
              <div class="card-body">
                <div class="card-title"><h2 class="text-center display-4 mb-4">Bonjour {{ user.nom }} {{ user.prenom }}</h2></div>
                    <p class="lead">A partir de cet espace vous pouvez : </p>
                     <div class="list-group list-group-flush">
                        <div class="list-group-item list-group-item-action">
                                <form id="getCalendar"   name="getCalendar" method="post" action="{{ path_for('calendar.general') }}">
                                    <div class="form-row">
                                        <div class="form-group col-md-6"><label><i class="far fa-calendar-check"></i> Mettre à jour votre calendrier</label></div>
                                        <div class="form-group col-md-2 mb-sm-2 mb-md-0">

                                            <select name="selMois" id="selMois" class="form-control form-control-sm ">
                                                {% for key,mois in form_calendar.month_listing %}
                                                <option value="{{ key }}" {% if key is same as(form_calendar.current_month) %} selected="selected" {% endif %}> {{ mois }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                       <div class="form-group col-md-2 mb-sm-2 mb-md-0">
                                            <select name="selAnnee" id="selAnnee" class="form-control  form-control-sm">
                                                {% for key,annee in form_calendar.year_listing %}
                                                <option value="{{ key }}" {% if key is same as(form_calendar.current_year) %} selected="selected" {% endif %}> {{ annee }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="form-group col-md-2 text-sm-right text-md-left">
                                            <button class="btn btn-dark btn-sm" type="submit"><i class="far fa-calendar-alt fa-lg"></i>&nbsp;Mettre à jour</button>
                                        </div>
                                    </div>
                                    {{ csrf.field | raw }}
                               </form>
                        </div>
                        <div class="list-group-item list-group-item-action">
                                <form id="getCalendarfoAll" name="getCalendarfoAll" method="post" action="{{ path_for('calendar.forall') }}">
                                    <div class="form-row">
                                        <div class="form-group col-md-6"><label><i class="far fa-calendar-alt"></i> Voir le calendrier Global</label></div>
                                        <div class="form-group col-md-2 mb-sm-2 mb-md-0">

                                            <select name="selMois" id="selMois" class="form-control form-control-sm ">
                                                {% for key,mois in form_calendar.month_listing %}
                                                <option value="{{ key }}" {% if key is same as(form_calendar.current_month) %} selected="selected" {% endif %}> {{ mois }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                       <div class="form-group col-md-2 mb-sm-2 mb-md-0">
                                            <select name="selAnnee" id="selAnnee" class="form-control  form-control-sm">
                                                {% for key,annee in form_calendar.year_listing %}
                                                <option value="{{ key }}" {% if key is same as(form_calendar.current_year) %} selected="selected" {% endif %}> {{ annee }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="form-group col-md-2 text-sm-right text-md-left">
                                            <button class="btn btn-dark btn-sm" type="submit"><i class="far fa-calendar-check fa-lg" aria-hidden="true"></i>&nbsp;Voir</button>
                                        </div>
                                    </div>
                                    {{ csrf.field | raw }}
                               </form>
                        </div>
                        <a class="list-group-item list-group-item-action" href="{{ path_for('auth.password.change') }}"><i class="align-middle fas fa-key"></i> Changer votre mot de passe</a>
                        <a class="list-group-item list-group-item-action" href="{{ path_for('auth.infos.change') }}"><i class="align-middle fas fa-address-card"></i> Changer vos informations</a>
                        <a class="list-group-item list-group-item-action" href="{{ path_for('auth.signup') }}"><i class="fas fa-user-plus"></i> Inscrire un nouveau membre</a>
                        {# <button type="button" class="list-group-item list-group-item-action list-group-item-danger" disabled action="{{ path_for('user.detroy') }}{{auth.user.id}}"><i class="fas fa-trash"></i> Supprimer ce compte</button> pour plus tard #}
                    </div>
                </div>
              </div>
            </div>
        {% else %}
            <h1 class="display-3 text-center mb-4">{{ application.name }}</h1>
            <div class="card border-0">
                <div class="row d-flex">
                    <div class="col-md-5 offset-md-1 col-sm-4 offset-sm-4">
                         <div class="card d-sm-none d-md-block border-0">
                            <div class="card-body p-0">
                                <div class="row justify-content-center align-middle border-line"> <img src="/assets/img/carpool.svg" class="img-fluid rounded image"> </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">

                            <div class="card px-4 py-5">
                                <div class="card-body">
                                    <div class="card-title"><h2 class="text-center display-4 mb-4">Se connecter</h2></div>
                                    <form action="{{ path_for('auth.signin') }}" method="post">
                                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                                            <label for="email">Email</label>
                                            <input type="email" name="email" id="email" placeholder="email@domaine.com" class="form-control" value="{{ old.email }}">
                                            {% if errors.email %}
                                            <span class="hel-block">{{ errors.email | first }}</span>
                                            {% endif %}
                                        </div>
                                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                                            <label for="password">Password</label>
                                            <input type="password" name="password" id="password" class="form-control">
                                            {% if errors.password %}
                                            <span class="hel-block">{{ errors.password | first }}</span>
                                            {% endif %}
                                        </div>
                                        <button type="submit" class="btn btn-default">Sign In</button>
                                        {{ csrf.field | raw }}
                                    </form>
                                </div>
                            </div>

                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
